// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id
  password String
  name  String?
}

model Task {
  id    String     @id @default(dbgenerated("uuid_generate_v4()"))
  user_id String
  title  String?
}

model Comment {
  id    String     @id @default(dbgenerated("uuid_generate_v4()"))
  task_id String 
  content  String?
}